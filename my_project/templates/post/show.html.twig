{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>DatePublished</th>
                <td>{{ post.datePublished ? post.datePublished|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author.username }}</td>
                <td><a href="{{ path('user_show', {'id': post.author.id}) }}">linkas i autoriaus puslapi</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>
    {% if app.user %}
        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
    {% endif %}
    {{ include('post/_delete_form.html.twig') }}
{% endblock %}